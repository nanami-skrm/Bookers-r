<h1>Editing Book</h1>

<% if @book.errors.any? %>
	<div class="alert alert-danger">
  		<p><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</p>
    	<ul>
      	<% @book.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
    	</ul>
  	</div>
<% end %>

<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<div class="update">
	<%= f.submit "Update Book" %>
</div>
<div class="link">
	<%= link_to "show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
</div>
<% end %>
