<%= notice %>
<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th> </th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book.id) %>
				<%= link_to "edit", edit_book_path(book.id) %>
				<%= link_to "destroy", book_path(book.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
	<div class="alert alert-danger">
  		<p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
    	<ul>
      	<% @book.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
    	</ul>
  	</div>
<% end %>

<%= form_for(@book) do |f| %>
	<p>Title</p>
	<%= f.text_field :title %>
	<p>Body</p>
	<%= f.text_area :body %>
	<div class="Create">
		<%= f.submit "Create Book" %>
	</div>
<% end %>